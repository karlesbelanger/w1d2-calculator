<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.kgb.caculator.MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/numbInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
    android:id="@+id/btn1"
        android:text="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:onClick="doMagic"/>
    <Button
        android:id="@+id/btn3"
        android:text="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doMagic2"/>
    <Button
        android:id="@+id/btn7"
        android:text="7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doMagic3"/>
    <Button
        android:id="@+id/btnAdd"
        android:text="+"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doMagic4"/>
    <Button
        android:id="@+id/btnMinus"
        android:text="-"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doMagic5"/>
    <Button
        android:id="@+id/btnEnter"
        android:text="Calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doMagic6"/>

</LinearLayout>
